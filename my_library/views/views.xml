<odoo>
  <data>
    <!-- explicit form view definition -->

    <record model="ir.ui.view" id="library_book_view_form">
      <field name="name">Library Book Form</field>
      <field name="model">my_library.my_library</field>
      <field name="arch" type="xml">
        <form>
            <group>
                <group>
                    <field name="name"/>
                    <field name="author_ids" widget="many2many_tags"/>
                    <field name="state"/>
                    <field name="pages"/>
                    <field name="notes"/>
                    <field name="cost_price"/>
                    <field name="retail_price"/>
                    <field name="currency_id"/>
                </group>
                <group>
                    <field name="short_name"/>
                    <field name="publisher_id"/>
                    <field name="publisher_city"/>
                    <field name="date_release"/>
                    <field name="date_updated"/>
                    <field name="age_days"/>
                    <field name="cover" widget="image" class="oe_avatar"/>
                    <field name="reader_rating"/>
                    <field name="ref_doc_id"/>
                </group>
            </group>
            <group>
                <field name="description"/>
            </group>
        </form>
      </field>
    </record>

    <!--explicit list view definition -->
    <record model="ir.ui.view" id="library_book_view_tree">
      <field name="name">Library Book List</field>
      <field name="model">my_library.my_library</field>
      <field name="arch" type="xml">
          <tree>
              <field name="name"/>
              <field name="date_release"/>
          </tree>
      </field>
    </record>
      

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="library_book_action">
      <field name="name">Library Book</field>
      <field name="res_model">my_library.my_library</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Top menu item -->

    <menuitem name="My Library" id="library_base_menu"/>

    <!-- menu categories -->

    <menuitem name="Books" id="library_book_menu" parent="library_base_menu" action="library_book_action"/>

    <!-- search -->
    
    <record model="ir.ui.view" id="library_book_view_search">
        <field name="name">Library Book Search</field>
        <field name="model">my_library.my_library</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="author_ids"/>
                <filter string="No Authors"
                        name="without_authors"
                        domain="[('author_ids','=',False)]"/>
            </search>
        </field>
    </record>
  </data>
</odoo>