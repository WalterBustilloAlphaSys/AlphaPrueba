<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>   
        <!-- Mision Form -->
        <record model="ir.ui.view" id="prueba_view_form">
            <field name="name">prueba.form</field>
            <field name="model">exploracion.prueba</field>
            <field name="arch" type="xml">
                <form string="Formulario Prueba">
                    <sheet>
                        <h1><field name="name"/></h1>
                        <group>
                            <group>
                                <field name="nave_id"/>
                                <field name="origen"/>
                                <field name="destino"/>
                            </group>
                            <group>
                                <field name="fecha_lanzamiento"/>
                                <field name="fecha_retorno"/>
                            </group>
                            <group>
                                <field name="length"/>
                                <field name="width"/>
                                <field name="heigth"/>
                            </group>
                            <group>
                                <field name="m3"/>
                                <field name="Peso"/>
                                <field name="active"/>
                            </group>
                            
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Misions List -->
        <record model="ir.ui.view" id="prueba_view_list">
            <field name="name">prueba.list</field>
            <field name="model">exploracion.prueba</field>
            <field name="arch" type="xml">
                <tree string="Prueba Misiones Espaciales">
                    <field name="name"/>
                    <field name="nave_id"/>
                    <field name="origen"/>
                    <field name="destino"/>
                    <field name="fecha_lanzamiento"/>
                    <field name="fecha_retorno"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        
        <!-- Misions Search -->
        <record model="ir.ui.view" id="spaceship_view_search">
            <field name="name">prueba.search</field>
            <field name="model">exploracion.prueba</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="nave_id"/>
                    <field name="origen"/>
                    <field name="destino"/>
                    <field name="fecha_lanzamiento"/>
                    <field name="fecha_retorno"/>
                </search>
            </field>
        </record>            
  </data>
</odoo>